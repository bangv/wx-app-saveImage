.bg-top {
  width: 100%;
  position: absolute;
  top: -20rpx;
  left: 0;
  z-index: 1;
}

.container {
  font-size: 32rpx;
  background: linear-gradient(rgb(244, 72, 60), rgb(252, 96, 68));
  width: 100%;
  height: 100vh;
}

.bg-footer {
  width: 100%;
  position: absolute;
  bottom: -4rpx;
  left: 0;
  z-index: 1;
}

.bg-top>image, .bg-footer>image {
  width: 100%;
}

.content-c {
  /* width: 80%; */
  padding: 20rpx;
  background: #fff;
  border-radius: 10rpx;
  color: #333;
  margin: 0 auto;
  margin-top: 180rpx;
  position: relative;
  display: block;
  width: 80%;
  z-index: 10;
}

.honggao-top {
  width: 86%;
  /* height: 800rpx; */
  display: block;
  margin: 0 auto;
  margin-top: 50rpx;
  position: relative;
  z-index: 11;
}

.form-i {
  display: block;
  width: 78%;
  position: absolute;
  top: 30rpx;
  left: 11%;
  background: #ffefe0;
  border-radius: 10rpx;
  color: #333;
  height: 620rpx;
  z-index: 12;
}

.honggao-footer {
  width: 86%;
  /* height: 200rpx; */
  display: block;
  margin: 0 auto;
  margin-top: -95rpx;
  position: relative;
  z-index: 15;
}

.g-rule {
  text-align: center;
  color: #ff4323;
  font-size: 32rpx;
}

.g-rule>text {
  display: inline-block;
}

.line {
  width: 40rpx;
  height: 4rpx;
  margin-right: 5rpx;
  margin-bottom: 8rpx;
  background: linear-gradient(-90deg, rgba(255, 67, 35, 1) 0%, rgba(255, 67, 35, 0.2) 100%);
}

.line-r {
  width: 40rpx;
  height: 4rpx;
  margin-left: 5rpx;
  margin-bottom: 8rpx;
  background: linear-gradient(-90deg, rgba(255, 67, 35, 0.2)0%, rgba(255, 67, 35, 1) 100%);
}

.f-s {
  font-size: 28rpx;
}

.form-d {
  width: 95%;
  margin: 10rpx auto;
  border: 1px solid #dbb985;
  height: 100%;
}

.i-input-l {
  margin: 20rpx;
  background: #fff;
  padding: 10rpx;
  font-size: 28rpx;
}


.d-flex {
  align-items: center;
  display: flex;
  justify-content: space-between;
  padding-right: 20rpx;
}

.code-im {
  width: 47%;
  border: #ccc solid 1px;
  height: 66rpx;
  text-align: center;
  font-size: 28rpx;
  line-height: 66rpx;
  background: linear-gradient(-90deg, rgba(253, 84, 41, 1) 0%, rgba(253, 122, 68, 1) 100%);
  border-radius: 4px;
  color:#fff;
}
.code-im-i{
  width: 90%;
  height: 66rpx;
}
.code-im-i>image{
  width: 100%;
  height: 100%;
}
.vi-ip {
  width: 100%;
  position: relative;
}

.del-x {
  position: absolute;
  right: 35rpx;
  top: 15rpx;
  display: block;
  width: 40rpx;
  z-index: 100;
}

.del-x>image {
  width: 100%;
}
.codeStyle{
  border: 1px solid #E6E6E6;
