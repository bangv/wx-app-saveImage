  background: #E6E6E6;
}
.sign-btn {
  width: 90%;
  display: block;
  margin: 0 auto;
  border: 0;
  height: 80rpx;
  font-size: 30rpx;
  color: #fff;
  background: linear-gradient(-90deg, rgba(253, 84, 41, 1) 0%, rgba(253, 122, 68, 1) 100%);
  border-radius: 5px;
}

.sign-btn::after {
  border: 0;
}
